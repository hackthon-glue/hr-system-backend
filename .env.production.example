# ===========================================
# AWS App Runner Environment Variables
# ===========================================
# Copy these to App Runner Console under Configuration â†’ Environment Variables

# Django Core Settings
SECRET_KEY=your-super-secret-key-min-50-chars-random-string-here
DEBUG=False
ALLOWED_HOSTS=your-app.ap-northeast-1.awsapprunner.com

# Database (RDS PostgreSQL)
DB_NAME=hr_agent_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=your-rds-endpoint.ap-northeast-1.rds.amazonaws.com
DB_PORT=5432

# AWS Bedrock Configuration
AWS_REGION=ap-northeast-1
AWS_BEDROCK_AGENT_ID=HrAgent-uVxcle2LzN
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY should NOT be set
# App Runner uses IAM role instead

# CORS Settings (Add your frontend URLs)
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://www.your-frontend.com

# JWT Token Settings (Optional - defaults are fine)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
JWT_ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO

# Security (Optional - enabled by default when DEBUG=False)
# SECURE_SSL_REDIRECT=True
